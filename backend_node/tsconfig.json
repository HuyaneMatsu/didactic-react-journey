{
    "compilerOptions": {
        "target": "es2018",
        "module": "ESNEXT",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "outDir": "dist",
        "sourceMap": true
    },
    "include": [
        "src"
    ],
    "ts-node": {
        "esm": true
    },
    "exclude": [
        "node_modules"
    ]
}
